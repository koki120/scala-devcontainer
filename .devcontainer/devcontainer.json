{
	"name": "Scala",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.profiles.linux": {
					"bash": {
						"path": "/bin/bash"
					},
					"sbt": {
						"path": "/bin/bash",
						"args": [
							"sbt"
						]
					}
				},
				"terminal.integrated.defaultProfile.linux": "bash",
				"java.jdt.ls.java.home": "/docker-java-home"	
			},
			"extensions": [
				"vscjava.vscode-java-pack",
				"scalameta.metals"
			]
		}
	},
	"remoteUser": "vscode"
}